<Window x:Class="EnigmaVault.Desktop.Views.Windows.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnigmaVault.Desktop.Views.Windows"
        xmlns:amc="clr-namespace:EnigmaVault.Desktop.Views.UserControls" 
        xmlns:converter="clr-namespace:EnigmaVault.Desktop.Resources.ValueConverters"
        xmlns:enum="clr-namespace:EnigmaVault.Desktop.Enums"
        xmlns:behaviors="clr-namespace:EnigmaVault.Desktop.Resources.Behaviors" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:windows="clr-namespace:EnigmaVault.Desktop.ViewModels.Windows"
        d:DataContext="{d:DesignInstance Type=windows:AuthenticationWindowViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Height="600" Width="800"
        Title="Авторизация">

    <Window.Resources>
        <converter:AuthControlsVisibilityConverter x:Key="AuthControlsVisibilityConverter"/>
    </Window.Resources>

    <i:Interaction.Behaviors>
        <behaviors:WindowDragBehavior/>
    </i:Interaction.Behaviors>

    <!--#region MainBorder -->

    <Border CornerRadius="12">

        <Border.Background>
            <ImageBrush ImageSource="/Resources/Images/auth-background.png"
                        Stretch="UniformToFill"/>
        </Border.Background>

        <Border CornerRadius="10"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <!--#region Header -->

                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <!--#region Заголовок в углу -->

                    <TextBlock Text="Авторизация"
                            Grid.Column="0"/>

                    <!--#endregion-->

                    <!--#region Свернуть окно-->

                    <Button x:Name="btnMinimize"
                            Grid.Column="1"
                            Command="{Binding MinimizeWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.AuthenticationWindow}"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <!--#endregion-->

                    <!--#region Закрыть приложение -->

                    <Button x:Name="btnClouse"
                            Grid.Column="2"
                            Command="{Binding CloseWindowCommand}" 
                            CommandParameter="{x:Static enum:WindowsName.AuthenticationWindow}"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"
                                        Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <!--#endregion-->

                </Grid>

                <!--#endregion-->

                <!--#region AccountManagementControls -->

                <DockPanel Grid.Row="1" 
                           Width="400"
                           HorizontalAlignment="Right"
                           Grid.Column="1">

                    <amc:AuthenticationControl Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.Authentication}}" 
                                               d:Visibility="Visible"
                                               d:Margin="0,0,0,20"
                                               DockPanel.Dock="Top"
                                               Login="{Binding Login.AuthLogin, UpdateSourceTrigger=PropertyChanged}"
                                               Password="{Binding Login.AuthPassword, UpdateSourceTrigger=PropertyChanged}"/>

                    <amc:RegistrationControl Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.Registration}}" 
                                             d:Visibility="Visible"
                                             d:Margin="0,0,0,20"
                                             DockPanel.Dock="Top"
                                             Title="Регистрация" 
                                             ContentText="Для регестрации обязательно нужно указать логин, пароль и почту, либо номер телефона."
                                             Login="{Binding Registration.RegistrationLogin, Mode=TwoWay}"
                                             Password="{Binding Registration.RegistrationPassword, Mode=TwoWay}"
                                             UserName="{Binding Registration.RegistrationUserName, Mode=TwoWay}"
                                             Email="{Binding Registration.RegistrationEmail, Mode=TwoWay}"/>

                    <amc:RecoveryAccessControl Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.RecoveryAccess}}"
                                               d:Visibility="Visible"
                                               d:Margin="0,0,0,20"
                                               DockPanel.Dock="Top"
                                               Login="{Binding RecoveryAccess.RecoveryLogin}"
                                               Email="{Binding RecoveryAccess.RecoveryEmail}"
                                               NewPassword="{Binding RecoveryAccess.RecoveryNewPassword}"/>

                </DockPanel>

                <!--#endregion-->

                <!--#region Кнопки -->

                <WrapPanel Grid.Row="2" Grid.Column="1" Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                    <!--Авторизация-->
                    <WrapPanel Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.Authentication}}">

                        <Button Content="Продолжить без входа"
                                DockPanel.Dock="Bottom"
                                Command="{Binding Login.LoginWithoutAuthCommand}"
                                Style="{StaticResource Button.App}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,10,0"
                                FontWeight="Bold"
                                FontSize="16"/>

                        <Button Content="Продолжить"
                                DockPanel.Dock="Bottom"
                                Command="{Binding Login.LoginCommand}"
                                Style="{StaticResource Button.App.VisibleWhenDisabled.WithOutAnimation}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                FontWeight="Bold"
                                FontSize="16"/>

                    </WrapPanel>

                    <!--Регистрация-->
                    <WrapPanel Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.Registration}}">

                        <Button Content="Зарегестрироваться"
                                DockPanel.Dock="Bottom"
                                Style="{StaticResource Button.App.VisibleWhenDisabled.WithOutAnimation}"
                                Command="{Binding Registration.RegisterCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,10,0"
                                FontWeight="Bold"
                                FontSize="16"/>

                    </WrapPanel>

                    <!--Востановить доступ-->
                    <WrapPanel Visibility="{Binding CurrentAuthenticationType, Converter={StaticResource AuthControlsVisibilityConverter}, ConverterParameter={x:Static enum:AuthenticationType.RecoveryAccess}}">

                        <Button Content="Востановить"
                                DockPanel.Dock="Bottom"
                                Style="{StaticResource Button.App}"
                                Command="{Binding RecoveryAccess.RecoveryAccessCommand}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,10,0"
                                FontWeight="Bold"
                                FontSize="16"/>

                    </WrapPanel>

                </WrapPanel>

                <StackPanel Grid.Column="0" Grid.RowSpan="2"
                            VerticalAlignment="Top"
                            Margin="10,10,0,0">

                    <Button Content="Вход"
                            Grid.Column="2"
                            Command="{Binding SwitchAuthenticationControlCommand}"
                            CommandParameter="{x:Static enum:AuthenticationType.Authentication}"
                            Style="{StaticResource Button.App.VisibleWhenDisabled.WithOutAnimation}"
                            FontWeight="Bold"
                            FontSize="16"/>

                    <Button Content="Регистрация"
                            Grid.Column="2"
                            Command="{Binding SwitchRegistrationControlCommand}"
                            CommandParameter="{x:Static enum:AuthenticationType.Registration}"
                            Style="{StaticResource Button.App.VisibleWhenDisabled.WithOutAnimation}"
                            FontWeight="Bold"
                            FontSize="16"/>

                    <Button Content="Вспомнить пароль"
                            Grid.Column="2"
                            Command="{Binding SwitchRecoveryAccessControlCommand}"
                            CommandParameter="{x:Static enum:AuthenticationType.RecoveryAccess}"
                            Style="{StaticResource Button.App.VisibleWhenDisabled.WithOutAnimation}"
                            FontWeight="Bold"
                            FontSize="16"/>

                </StackPanel>

                <!--#endregion-->

            </Grid>

        </Border>

    </Border>

    <!--#endregion-->

</Window>