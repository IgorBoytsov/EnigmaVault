                            <TextBox Text="{Binding IconCategoryName, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBox.InputData}"
                                         VerticalAlignment="Stretch"
                                         DockPanel.Dock="Top"/>

                            <Button Content="Добавить"
                                        Command="{Binding SaveIconCategoryCommand}"
                                        Style="{StaticResource Button.App}"
                                        Margin="5,0,0,0"
                                        HorizontalAlignment="Right"/>

                        </DockPanel>
                    </TabItem>

                    <!--#endregion-->

                    <!--#region Обновление категории -->

                    <TabItem Header="Обновить">
                        <DockPanel>

                            <ComboBox ItemsSource="{Binding IconCategoryView}"
                                      SelectedItem="{Binding SelectedEditableCategory, Mode=TwoWay}"
                                      Style="{StaticResource BaseComboBox}"
                                      DockPanel.Dock="Top">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasUserId}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>

                                            <WrapPanel Grid.Column="1">
                                                <!--<Button x:Name="UpdateButton" 
                                                        Style="{StaticResource Button.App}"
                                                        Focusable="False"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                        CommandParameter="{Binding}"
                                                        Visibility="Collapsed">
                                                    <Button.Content>
                                                        <Control Template="{StaticResource Save}" Foreground="Yellow" Width="15" Height="15"/>
                                                    </Button.Content>
                                                </Button>-->
                                                <Button x:Name="DeleteButton" 
                                                        Style="{StaticResource Button.App}"
                                                        Focusable="False"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.DeleteIconCategoryCommand, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                        CommandParameter="{Binding}">
                                                    <Button.Content>
                                                        <Control Template="{StaticResource Trash}" Foreground="Red" Width="15" Height="15"/>
                                                    </Button.Content>
                                                </Button>
                                            </WrapPanel>

                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding HasUserId}" Value="True">
                                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                                <!--<Setter TargetName="UpdateButton" Property="Visibility" Value="Visible"/>-->
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ComboBoxItem}}" Value="{x:Null}">
                                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Collapsed"/>
                                                <!--<Setter TargetName="UpdateButton" Property="Visibility" Value="Collapsed"/>-->
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                                <TextBox Text="{Binding SelectedEditableCategory.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         Style="{StaticResource TextBox.InputData}"
                                         VerticalAlignment="Stretch"
                                         DockPanel.Dock="Top"/>

                                <Button Content="Обновить"
                                        Command="{Binding UpdateIconCategortyCommand}"
                                        CommandParameter="{Binding SelectedEditableCategory}"
                                        Style="{StaticResource Button.App}"
                                        VerticalAlignment="Bottom" HorizontalAlignment="Right"/>

                            </DockPanel>

                        </DockPanel>
                    </TabItem>

                    <!--#endregion-->

                </TabControl>
            </Border>
        </Popup>

        <!--#endregion-->

        <!--=========Controls==========-->

        <!--#region Сортировка, Группировка -->

        <DockPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,0,0,0" LastChildFill="False">

            <!--#region Группировка -->

            <Border Style="{StaticResource Border.Base.Card}" Margin="0,0,7,0" DockPanel.Dock="Left">
                <WrapPanel Margin="2">
                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.None}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: Отсутствует" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Empty}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.Name}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: по имени" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource BookAView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.VaultType}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: По типу пароля" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource BookTypeView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.Add}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: По дате добавления" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource ClockPlusView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.Update}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: По дате обновления" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Updated}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding SetGroupingPasswordsCommand}"
                            CommandParameter="{x:Static enum:GroupingView.Tag}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0">
                        <Button.ToolTip>
                            <ToolTip Content="Группировка: По тэгам" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Tag}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </Border>
            
            <!--#endregion--> 

            <!--#region Выбор темплейта -->
           
            <Border Style="{StaticResource Border.Base.Card}" DockPanel.Dock="Left">
                <WrapPanel Margin="2">
                    <Button Command="{Binding SetTemplatePasswordsCommand}"
                            CommandParameter="{x:Static enum:TemplateType.Detailed}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Left">
                        <Button.ToolTip>
                            <ToolTip Content="Максимальная детализация" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource DetailedView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetTemplatePasswordsCommand}"
                            CommandParameter="{x:Static enum:TemplateType.Brief}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Left">
                        <Button.ToolTip>
                            <ToolTip Content="Краткая детализация" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource BriefView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetTemplatePasswordsCommand}"
                            CommandParameter="{x:Static enum:TemplateType.Compact}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Left">
                        <Button.ToolTip>
                            <ToolTip Content="Компактная детализация" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding TopToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource GridCompactView}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </Border>

            <!--#endregion-->

        </DockPanel>

        <!--#endregion-->

        <!--#region Левое боковое меню (Папки, тэги, история записи, архив, карзина) -->

        <Border Grid.Row="0" Grid.RowSpan="2"
                Style="{StaticResource Border.Base.Card}"
                Margin="0,0,0,0"
                CornerRadius="0,10,10,0">

            <Grid Margin="5,5,5,7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--=========Контролы=========-->

                <!--#region Переключение списков -->

                <WrapPanel Margin="5,0,0,0" Grid.Row="0">

                    <Button Command="{Binding SetLeftSideMenuControlCommand}"
                            CommandParameter="{x:Static enum:UserControlsName.Tags}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Top">
                        <Button.ToolTip>
                            <ToolTip Content="Тэги" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Tag}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetLeftSideMenuControlCommand}"
                            CommandParameter="{x:Static enum:UserControlsName.Icons}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Top">
                        <Button.ToolTip>
                            <ToolTip Content="Иконки" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource Image}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                </WrapPanel>

                <!--#endregion-->

                <!--#region [UserControl(ListView)] Тэги -->

                <uc:TagsControl x:Name="UcTags" Grid.Row="1"
                                Tags="{Binding Tags}"
                                SelectedTag="{Binding SelectedTag, Mode=TwoWay}"
                                DeleteTagCommand="{Binding DeleteTagCommand}"
                                CreateTagCommand="{Binding CreateTagCommand}"
                                SaveTagCommand="{Binding UpdateTagCommand}"
                                TagName="{Binding NameTag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Red="{Binding Red, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" UpdateRed="{Binding UpdateRed, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Green="{Binding Green, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" UpdateGreen="{Binding UpdateGreen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Blue="{Binding Blue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" UpdateBlue="{Binding UpdateBlue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Visibility="{Binding CurrentDisplayUserControlLeftSideMenu, Converter={StaticResource PasswordPageControlsVisibilityConverter}, ConverterParameter={x:Static enum:UserControlsName.Tags}}"
                                d:Visibility="Collapsed"/>

                <!--#endregion-->

                <!--#region [ListView] Svg Icon -->

                <Grid Grid.Row="1" Visibility="{Binding CurrentDisplayUserControlLeftSideMenu, Converter={StaticResource PasswordPageControlsVisibilityConverter}, ConverterParameter={x:Static enum:UserControlsName.Icons}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <WrapPanel HorizontalAlignment="Right">

                        <Button x:Name="AddIconCatBtn"
                                Command="{Binding AddIconCategoryPopup.ShowCommand}"
                                CommandParameter="{Binding ElementName=AddIconCatBtn}" 
                                Style="{StaticResource Button.App}"
                                Margin="0,0,5,0"
                                Width="30" Height="30">
                            <Button.ToolTip>
                                <ToolTip Content="Добавить категорию" 
                                         Placement="Custom"
                                         CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                         Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                            </Button.ToolTip>
                            <Button.Content>
                                <Control Template="{StaticResource ListFilterPlus}"/>
                            </Button.Content>
                        </Button>

                        <Button x:Name="AddIconBtn"
                                Command="{Binding AddIconPopup.ShowCommand}"
                                CommandParameter="{Binding ElementName=AddIconBtn}" 
                                Style="{StaticResource Button.App}"
                                Width="30" Height="30">
                            <Button.ToolTip>
                                <ToolTip Content="Добавить иконку" 
                                         Placement="Custom"
                                         CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                         Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                            </Button.ToolTip>
                            <Button.Content>
                                <Control Template="{StaticResource ImagePlus}"/>
                            </Button.Content>
                        </Button>

                    </WrapPanel>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding IconView}" d:ItemsSource="{d:SampleData ItemCount=10}"
                              SelectedItem="{Binding SelectedIcon}"
                              ScrollViewer.CanContentScroll="False"
                              VirtualizingPanel.ScrollUnit="Pixel"
                              ScrollViewer.VerticalScrollBarVisibility="Visible"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.CacheLength="15,15"
                              VirtualizingPanel.CacheLengthUnit="Item">

                        <!--#region ListView.Style -->

                        <ListView.Style>
                            <Style TargetType="ListView" BasedOn="{StaticResource ListView.App}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Margin" Value="5,5,5,5"/>
                                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                <Setter Property="ItemsPanel" Value="{StaticResource WrapPanelTemplate}"/>
                                <Setter Property="ItemTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <Image Source="{Binding Icon}"
                                                   Width="50" Height="50"
                                                   Stretch="Uniform"
                                                   DockPanel.Dock="Left"
                                                   ToolTip="{Binding Name}"
                                                   ToolTipService.Placement="Right"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Style>

                        <!--#endregion-->

                        <!--#region ItemContainerStyle -->

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Margin" Value="3,0,0,0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0,0,0,5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="mainBorder"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}"
                                                    Margin="{TemplateBinding Margin}"
                                                    SnapsToDevicePixels="true"
                                                    DockPanel.Dock="Top">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1E2F3A"/>
                                        <Setter Property="BorderBrush" Value="#0095F6"/>
                                        <Setter Property="Foreground" Value="#50A7E7"/>
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#1E2F3A"/>
                                        <Setter Property="BorderBrush" Value="#0095F6"/>
                                        <Setter Property="Foreground" Value="#50A7E7"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <!--#endregion-->

                        <!--#region ContextMenu -->

                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Установить"
                                          Command="{Binding DataContext.UpdateIconSecretCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          CommandParameter="{Binding DataContext.SelectedIcon, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                <MenuItem Header="Удалить">
                                    <MenuItem.Icon>
                                        <Control Template="{StaticResource Trash}" Foreground="Red"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <!--#endregion-->

                        <!--#region GroupStyle -->

                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Grid >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>

                                                        <ToggleButton x:Name="ExpanderButton" Grid.Row="0"
                                                                      IsChecked="True"
                                                                      Cursor="Hand">
                                                            <ToggleButton.Style>
                                                                <Style TargetType="ToggleButton">
                                                                    <!--<Setter Property="Background" Value="#10FFFFFF"/>-->
                                                                    <Setter Property="Background" Value="{StaticResource App.SurfaceBrush}"/>
                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                    <Setter Property="Padding" Value="0"/>
                                                                    <Setter Property="Margin" Value="0,0,0,5"/>
                                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ToggleButton">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                                        CornerRadius="3"
                                                                                        SnapsToDevicePixels="True">
                                                                                    <ContentPresenter Margin="{TemplateBinding Padding}" 
                                                                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ToggleButton.Style>

                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Path x:Name="ArrowPath" Grid.Column="0" Fill="White" 
                                                                      VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                      Margin="13,0,0,0">
                                                                    <Path.Style>
                                                                        <Style TargetType="Path">
                                                                            <Setter Property="Data" Value="M 0 0 L 4 4 L 8 0 Z"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="False">
                                                                                    <Setter Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Path.Style>
                                                                </Path>

                                                                <WrapPanel Grid.Column="1">

                                                                    <TextBlock Text="{Binding Name}" 
                                                                               FontWeight="Bold" FontSize="18" Foreground="#A0D0FF"
                                                                               VerticalAlignment="Center" Margin="5,0,0,0"/>

                                                                    <TextBlock Text="{Binding ItemCount, StringFormat=' ({0})'}" 
                                                                               FontSize="18" Foreground="#88FFFFFF" Margin="8,0,8,0"
                                                                               VerticalAlignment="Center"/>
                                                                </WrapPanel>

                                                            </Grid>
                                                        </ToggleButton>

                                                        <ItemsPresenter x:Name="ItemsPanel" Grid.Row="1"/>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, ElementName=ExpanderButton}" Value="False">
                                                            <Setter TargetName="ItemsPanel" Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListView.GroupStyle>

                        <!--#endregion-->

                    </ListView>
                </Grid>

                <!--#endregion-->

                <!--#region История, Архив, Карзина -->

                <StackPanel Grid.Row="2">

                    <ToggleButton x:Name="OpenPasswordHistoryManagementButton" 
                                  Content="История" 
                                  IsChecked="{Binding IsPasswordToDeletePopupOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  attach:ButtonHelper.IconTemplate="{StaticResource Updated}"
                                  Foreground="White">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButton.Page.SideMenu.Management}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedSecrets.Count}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton x:Name="OpenArchiveManagementButton" 
                                  Content="Архив" 
                                  Command="{Binding ArchivesPopup.ShowCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                  IsChecked="{Binding ArchivesPopup.IsOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  attach:ButtonHelper.IconTemplate="{StaticResource Archive}"
                                  VerticalAlignment="Bottom" Margin="5,0,0,0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButton.Page.SideMenu.Management}">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <ToggleButton x:Name="OpenPasswordTrashManagementButton" 
                                  Content="Корзина" 
                                  Command="{Binding TrashPopup.ShowCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                  IsChecked="{Binding TrashPopup.IsOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  attach:ButtonHelper.IconTemplate="{StaticResource Trash}"
                                  VerticalAlignment="Bottom" Margin="5,0,0,0">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButton.Page.SideMenu.Management}">
                                <!--<Setter Property="Foreground" Value="#FF3333"/>-->
                                <Setter Property="Foreground" Value="#D70D0D"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#AE0606"/>
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                </StackPanel>

                <!--#endregion-->

            </Grid>
        </Border>

        <!--#endregion-->

        <GridSplitter Grid.Column="1" Grid.RowSpan="2"
                      Width="3" 
                      ResizeDirection="Columns" 
                      ResizeBehavior="BasedOnAlignment"
                      Margin="2,0,2,0"
                      HorizontalAlignment="Center"/>

        <!--#region Список паролей -->

        <ListView x:Name="PasswordsListView" Grid.Column="2" Grid.Row="1"
                  ItemsSource="{Binding PasswordsView}" d:ItemsSource="{d:SampleData ItemCount=5}"
                  SelectedItem="{Binding SelectedEncryptedOverview}"
                  SelectionMode="Single"
                  ScrollViewer.CanContentScroll="False"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.CacheLength="15,15"
                  VirtualizingPanel.CacheLengthUnit="Item">

            <!--#region ListView.Style -->

            <ListView.Style>
                <Style TargetType="ListView">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="Margin" Value="5,5,5,5"/>
                    <Setter Property="ItemTemplate" Value="{StaticResource DetailedSecrets}"/>
                    <Setter Property="ItemsPanel" Value="{StaticResource StackPanelTemplate}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentTemplateTypePasswords}" Value="{x:Static enum:TemplateType.Detailed}">
                            <Setter Property="ItemTemplate" Value="{StaticResource DetailedSecrets}"/>
                            <Setter Property="ItemsPanel" Value="{StaticResource StackPanelTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentTemplateTypePasswords}" Value="{x:Static enum:TemplateType.Brief}">
                            <Setter Property="ItemTemplate" Value="{StaticResource ShortlySecrets}"/>
                            <Setter Property="ItemsPanel" Value="{StaticResource StackPanelTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentTemplateTypePasswords}" Value="{x:Static enum:TemplateType.Compact}">
                            <Setter Property="ItemTemplate" Value="{StaticResource VeryBrieflySecret}"/>
                            <Setter Property="ItemsPanel" Value="{StaticResource WrapPanelTemplate}"/>
                            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>

            <!--#endregion-->

            <!--#region ItemContainerStyle -->

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Margin" Value="0,3,0,0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="5,0,0,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="mainBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        Margin="{TemplateBinding Margin}"
                                        SnapsToDevicePixels="true">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="MouseRightButtonUp">
                                            <b:InvokeCommandAction Command="{Binding DataContext.SelectAndShowPasswordMenuPopupCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>

                                    <ContentPresenter/>

                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1E2F3A"/>
                            <Setter Property="BorderBrush" Value="#0095F6"/>
                            <Setter Property="BorderThickness" Value="5,0,0,0"/>
                            <Setter Property="Foreground" Value="#50A7E7"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#1E2F3A"/>
                            <Setter Property="BorderBrush" Value="#0095F6"/>
                            <Setter Property="BorderThickness" Value="5,0,0,0"/>
                            <Setter Property="Foreground" Value="#50A7E7"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding DataContext.CurrentTemplateTypePasswords, RelativeSource={RelativeSource AncestorType=ListView}}" Value="{x:Static enum:TemplateType.Compact}">
                            <Setter Property="BorderThickness" Value="0,0,0,5"/>
                            <Setter Property="Margin" Value="3,0,0,0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

            </ListView.ItemContainerStyle>

            <!--#endregion-->

            <!--#region GroupStyle -->

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Grid Margin="0,5,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <ToggleButton x:Name="ExpanderButton" Grid.Row="0"
                                                  IsChecked="True"
                                                  Cursor="Hand">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="#10FFFFFF"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="Margin" Value="0,8,0,4"/>
                                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="3"
                                                                            SnapsToDevicePixels="True">
                                                                        <ContentPresenter Margin="{TemplateBinding Padding}" 
                                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <Path x:Name="ArrowPath" Grid.Column="0" Fill="White" 
                                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                                          Margin="13,0,0,0">
                                                        <Path.Style>
                                                            <Style TargetType="Path">
                                                                <Setter Property="Data" Value="M 0 0 L 4 4 L 8 0 Z"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="False">
                                                                        <Setter Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Path.Style>
                                                    </Path>

                                                    <WrapPanel Grid.Column="1">

                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontWeight="Bold" FontSize="18" Foreground="#A0D0FF"
                                                                   VerticalAlignment="Center" Margin="5,0,0,0"/>

                                                        <TextBlock Text="{Binding ItemCount, StringFormat=' ({0})'}" 
                                                                   FontSize="18" Foreground="#88FFFFFF" Margin="8,0,8,0"
                                                                   VerticalAlignment="Center"/>
                                                    </WrapPanel>

                                                </Grid>
                                            </ToggleButton>

                                            <ItemsPresenter x:Name="ItemsPanel" Grid.Row="1"/>
                                        </Grid>

                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, ElementName=ExpanderButton}" Value="False">
                                                <Setter TargetName="ItemsPanel" Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>

            <!--#endregion-->

        </ListView>

        <!--#endregion-->

        <!--#region Правая боковая панель -->

        <Border Grid.Column="3" Grid.RowSpan="2"
                Style="{StaticResource Border.Base.Card}"
                Visibility="{Binding IsSidebarOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                Width="{Binding RightSidebarWidth}" 
                CornerRadius="10,0,0,10">
            <Border.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Margin" Value="5,0,0,0"/>
                </Style>

                <Style TargetType="TextBox" BasedOn="{StaticResource TextBox.InputData}">
                    <!--<Setter Property="Template" Value="{StaticResource InputPasswordDataTemplate}"/>-->
                </Style>

            </Border.Resources>
            <Grid Margin="5,5,5,7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Переключение дейсвтий -->

                <WrapPanel Margin="5,0,0,0" Grid.Row="0" HorizontalAlignment="Right">

                    <Button Command="{Binding SetRightSideMenuActionCommand}"
                            CommandParameter="{x:Static enum:ActionOnData.View}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Top">
                        <Button.ToolTip>
                            <ToolTip Content="Просмотр" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource LookingEye}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetRightSideMenuActionCommand}"
                            CommandParameter="{x:Static enum:ActionOnData.Create}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Top">
                        <Button.ToolTip>
                            <ToolTip Content="Создать" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource CirclePlus}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SetRightSideMenuActionCommand}"
                            CommandParameter="{x:Static enum:ActionOnData.Update}"
                            Style="{StaticResource Buttom.PasswordPage.SideMenu.Navigation}"
                            Margin="3,0,0,0"
                            DockPanel.Dock="Top">
                        <Button.ToolTip>
                            <ToolTip Content="Редактировать" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding BottomToolTipController.CustomPlacementCallback}"
                                     Style="{StaticResource ToolTip.App.Placement.Bottom}"/>
                        </Button.ToolTip>
                        <StackPanel>
                            <Viewbox>
                                <Control Template="{StaticResource SquarePen}" Foreground="White"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>

                </WrapPanel>

                <!--#endregion-->

                <ScrollViewer Grid.Row="1">

                    <Grid Margin="10,0,0,0">
                        <DockPanel>
                            <ComboBox ItemsSource="{Binding PasswordTypes}" 
                                      SelectedItem="{Binding SelectedPasswordType}" 
                                      Style="{StaticResource BaseComboBox}"
                                      IsEnabled="{Binding CurrentActionRightSideMenu, Converter={StaticResource ActionOnDataToIsReadOnlyConverter}}"
                                      DockPanel.Dock="Top">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Value}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>

                            </ComboBox>

                            <ContentControl Content="{Binding SelectedCredentialItemBaseViewModel}"
                                            HorizontalAlignment="Stretch">
                                <d:ContentControl.Content>

                                    <pvm:StandardPasswordViewModel ServiceName="Тестовый Сервис"
                                                                   Login="admin_user"
                                                                   Url="https://example.com"
                                                                   Note="Это пример заметки для отображения в дизайнере."/>
                                </d:ContentControl.Content>
                            </ContentControl>

                        </DockPanel>

                    </Grid>


                </ScrollViewer>

            </Grid>

        </Border>

        <!--#endregion-->

    </Grid>
</Page>
