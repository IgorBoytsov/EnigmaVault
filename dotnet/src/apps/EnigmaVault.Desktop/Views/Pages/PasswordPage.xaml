<Page x:Class="EnigmaVault.Desktop.Views.Pages.PasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnigmaVault.Desktop.Views.Pages"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:EnigmaVault.Desktop.Resources.Behaviors"
      xmlns:sys="clr-namespace:System;assembly=System.Runtime"
      xmlns:attach="clr-namespace:EnigmaVault.Desktop.Resources.Attachable"
      xmlns:enum="clr-namespace:EnigmaVault.Desktop.Enums" 
      xmlns:converters="clr-namespace:EnigmaVault.Desktop.Resources.ValueConverters" 
      xmlns:selectors="clr-namespace:EnigmaVault.Desktop.Selectors"
      xmlns:pages="clr-namespace:EnigmaVault.Desktop.ViewModels.Pages" 
      xmlns:uc="clr-namespace:EnigmaVault.Desktop.Views.UserControls" 
      xmlns:cc="clr-namespace:EnigmaVault.Desktop.Views.Controls" 
      xmlns:pvm="clr-namespace:EnigmaVault.Desktop.ViewModels.Features.Credentials.Items"
      d:DataContext="{d:DesignInstance Type=pages:PasswordPageViewModel}"
      mc:Ignorable="d" 
      Loaded="PasswordPage_Loaded" 
      Unloaded="PasswordPage_Unloaded"
      Title="PasswordPage"
      Background="Transparent"
      x:Name="PassPage">
    
    <b:Interaction.Behaviors>
        <behaviors:AsyncInitializeBehavior />
    </b:Interaction.Behaviors>

    <Page.Resources>
        <converters:PasswordPageControlsVisibilityConverter x:Key="PasswordPageControlsVisibilityConverter"/>
        <converters:ActionOnDataToVisibilityConverter x:Key="ActionOnDataToVisibilityConverter"/>
        <converters:ActionOnDataToIsReadOnlyConverter x:Key="ActionOnDataToIsReadOnlyConverter"/>
        <converters:ActionOnDataToPreviewIconVisibilityConverter x:Key="ActionOnDataToPreviewIconVisibilityConverter"/>
        <converters:ActionOnDataToCopyVisibilityConverter x:Key="ActionOnDataToCopyVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:DateToDaysRemainingConverter x:Key="DateToDaysRemainingConverter"/>

        <ItemsPanelTemplate x:Key="StackPanelTemplate">
            <StackPanel/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="WrapPanelTemplate">
            <WrapPanel/>
        </ItemsPanelTemplate>

        <!--#region Подробно описание элемента -->

        <DataTemplate x:Key="DetailedSecrets">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--#region Иконка сервиса -->

                <StackPanel Grid.RowSpan="2"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Margin="5,0,10,0">

                    <Image Source="{Binding Icon}"
                           Stretch="Uniform"/>

                </StackPanel>

                <!--#endregion-->

                <!--#region Папка, название сервиса, избранное, теги, кнопка выпадающего меню -->

                <Grid Grid.Column="1" Margin="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ServiceName}" d:Text="YouTube"
                               DockPanel.Dock="Top"
                               VerticalAlignment="Center"
                               FontFamily="Leelawadee"
                               FontSize="18"
                               FontWeight="Bold"/>

                    <WrapPanel Grid.Column="1" HorizontalAlignment="Right">

                        <Border Background="Transparent"
                                VerticalAlignment="Center"
                                ToolTipService.InitialShowDelay="100"
                                Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListView}}">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Tags.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Tags}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.ToolTip>
                                <ToolTip Placement="Custom"
                                         CustomPopupPlacementCallback="{Binding PlacementTarget.Tag.BottomToolTipController.CustomPlacementCallback, RelativeSource={RelativeSource Self}}">
                                    <ToolTip.Template>
                                        <ControlTemplate TargetType="ToolTip">
                                            <Grid DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ToolTip}}">

                                                <Path HorizontalAlignment="Center" 
                                                      VerticalAlignment="Top"
                                                      Fill="#2D2F31"
                                                      Stroke="#555759"
                                                      Data="M 5,0 L 0,8 L 10,8 Z" />

                                                <Border Background="#2D2F31" 
                                                        BorderBrush="#555759" 
                                                        BorderThickness="1" 
                                                        CornerRadius="5"
                                                        Padding="10"
                                                        Margin="0,8,0,0">

                                                    <ItemsControl ItemsSource="{Binding Tags}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding TagName}" 
                                                                           Foreground="White"
                                                                           FontSize="14" 
                                                                           Margin="0,2"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToolTip.Template>
                                </ToolTip>
                            </Border.ToolTip>

                            <Control Template="{StaticResource ScrollText}"
                                     Width="24" 
                                     Height="24"
                                     IsHitTestVisible="False"/>
                        </Border>

                        <Button Command="{Binding DataContext.SetFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding }"
                                Margin="2,0,0,0">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="Click">
                                    <b:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                            PropertyName="IsSelected"
                                                            Value="True" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource Button.App}">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Viewbox>
                                                <Control Template="{StaticResource AddFavorite}" Width="20" Foreground="#35A500"/>
                                            </Viewbox>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Viewbox>
                                                        <Control Template="{StaticResource RemoveFavorite}" Width="20" Foreground="Yellow"/>
                                                    </Viewbox>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="PopupButton"
                                Command="{Binding DataContext.PasswordMenuPopup.ShowCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding ElementName=PopupButton}"
                                Style="{StaticResource Button.App}"
                                Margin="2,0,0,0">
                            <Button.Content>
                                <Viewbox>
                                    <Control Template="{StaticResource DotsMenu}" Width="25" Foreground="White"/>
                                </Viewbox>
                            </Button.Content>
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="Click">
                                    <b:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                            PropertyName="IsSelected"
                                                            Value="True" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Button>
                    </WrapPanel>

                </Grid>

                <!--#endregion-->

                <!--#region Кратная информация о сервисе, кнопки управление -->

                <DockPanel Grid.Column="1" Grid.Row="1" Margin="3">

                    <!--#region Добавлен -->

                    <StackPanel DockPanel.Dock="Left" Width="200">
                        <WrapPanel>
                            <Viewbox Width="15" Margin="0,0,5,0">
                                <Control Template="{StaticResource FilledCorrect}"/>
                            </Viewbox>
                            <TextBlock Text="Добавлен" DockPanel.Dock="Top" Foreground="#438DB0"/>
                        </WrapPanel>

                        <TextBlock Text="{Binding DateAdded, Converter={StaticResource RecordDateUpdateConverter}}" d:Text="17 Июня 2026 11:11"/>
                    </StackPanel>

                    <!--#endregion-->

                    <!--#region Изменен -->

                    <StackPanel Margin="20,0,0,0" DockPanel.Dock="Left" Width="200">
                        <WrapPanel>
                            <Viewbox Width="15" Margin="0,0,5,0">
                                <Control Template="{StaticResource Updated}" Foreground="#10A64A"/>
                            </Viewbox>
                            <TextBlock Text="Обновлен" DockPanel.Dock="Top" Foreground="#438DB0"/>
                        </WrapPanel>

                        <TextBlock Text="{Binding DateUpdate, Converter={StaticResource RecordDateUpdateConverter}}" d:Text="17 Июня 2026 11:11"/>
                    </StackPanel>

                    <!--#endregion-->

                    <!--#region Гипперссылка -->

                    <StackPanel Margin="20,0,0,0" DockPanel.Dock="Left">
                        <WrapPanel>
                            <Viewbox Width="15" Margin="0,0,5,0">
                                <Control Template="{StaticResource Source}" Foreground="#10A64A"/>
                            </Viewbox>
                            <TextBlock Text="Источник" DockPanel.Dock="Top" Foreground="#438DB0"/>
                        </WrapPanel>

                        <TextBlock>
                            <Hyperlink NavigateUri="{Binding Url}">
                                <Hyperlink.Style>
                                    <Style TargetType="Hyperlink">
                                       <Setter Property="Foreground" Value="#009EFF" /> 
                                       <Setter Property="TextDecorations" Value="Underline" />
                                       <Style.Triggers>
                                           <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                               <Setter Property="Foreground" Value="#50A7E7"/>
                                           </DataTrigger>
                                       </Style.Triggers>
                                   </Style>
                               </Hyperlink.Style>
                               <TextBlock Text="Перейти" 
                                          TextTrimming="CharacterEllipsis"
                                          TextWrapping="NoWrap"/>
                               <b:Interaction.Triggers>
                                   <b:EventTrigger EventName="RequestNavigate">
                                       <behaviors:InvokeCommandWithHandled Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Url}" />
                                   </b:EventTrigger>
                               </b:Interaction.Triggers>
                           </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <!--#endregion-->

                    <!--#region Элементы управление -->

                    <WrapPanel DockPanel.Dock="Right" Visibility="Collapsed"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Margin="20,0,0,0">

                        <Button Command="{Binding DataContext.RemoveSecretFromFolder, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                CommandParameter="{Binding }"
                                Width="25"
                                Margin="0,0,5,0"
                                Cursor="Hand"
                                ToolTip="Удалить из папки"
                                ToolTipService.Placement="Right">
                            <Button.Content>
                                <Control Template="{StaticResource RemoveFolder}"/>
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource Button.App}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IdFolder}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Command="{Binding DataContext.UpdateFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                CommandParameter="{Binding }"
                                Width="25"
                                Cursor="Hand"
                                ToolTip="Избранное"
                                ToolTipService.Placement="Right">
                            <Button.Style>
                                <Style TargetType="Control">
                                    <Setter Property="Template" Value="{StaticResource BrokenHeart}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Template" Value="{StaticResource SolidHeart}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Style="{StaticResource Button.App}"
                                Command="{Binding DataContext.ShowEditMenuCommand, RelativeSource={RelativeSource AncestorType=ListView}}" Width="25" 
                                CommandParameter="{Binding }"
                                Margin="5,0,0,0"
                                ToolTip="Править"
                                ToolTipService.Placement="Right">
                            <Button.Content>
                                <Control Template="{StaticResource Edit}"/>
                            </Button.Content>
                        </Button>

                        <Button Style="{StaticResource Button.App}"
                                Command="{Binding DataContext.UpdateArchiveCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Width="25" 
                                Margin="5,0,0,0"
                                ToolTip="Архивировать"
                                ToolTipService.Placement="Right">
                            <Button.Content>
                                <Control Template="{StaticResource Archive}"/>
                            </Button.Content>
                        </Button>

                        <Button Style="{StaticResource Button.App}" 
                                Command="{Binding DataContext.MoveToTrashSecretCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"
                                Width="25" 
                                Margin="5,0,0,0"
                                ToolTip="Удалить"
                                ToolTipService.Placement="Right">
                            <Button.Content>
                                <Control Template="{StaticResource Trash}" Foreground="Red"/>
                            </Button.Content>
                        </Button>

                    </WrapPanel>

                    <!--#endregion-->

                </DockPanel>

                <!--#endregion-->

            </Grid>
        </DataTemplate>

        <!--#endregion-->

        <!--#region Краткое описание элемент -->

        <DataTemplate x:Key="ShortlySecrets">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--#region Иконка сервиса -->

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Margin="5,0,10,0">

                    <Image Source="{Binding Icon}"
                           Height="40"
                           Stretch="Uniform"/>

                </StackPanel>

                <!--#endregion-->

                <!--#region Контент -->

                <DockPanel Grid.Column="1">

                    <TextBlock Text="{Binding ServiceName}" d:Text="YouTube"
                               FontFamily="Leelawadee"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="10,0,0,0"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>

                    <WrapPanel Grid.Column="1" HorizontalAlignment="Right">

                        <Border Background="Transparent"
                                VerticalAlignment="Center"
                                ToolTipService.InitialShowDelay="100"
                                Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListView}}">
                                
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Tags.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Tags}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.ToolTip>
                                <ToolTip Placement="Custom"
                                         CustomPopupPlacementCallback="{Binding PlacementTarget.Tag.BottomToolTipController.CustomPlacementCallback, RelativeSource={RelativeSource Self}}">
                                    <ToolTip.Template>
                                        <ControlTemplate TargetType="ToolTip">
                                            <Grid DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ToolTip}}">

                                                <Path HorizontalAlignment="Center" 
                                                      VerticalAlignment="Top"
                                                      Fill="#2D2F31"
                                                      Stroke="#555759"
                                                      Data="M 5,0 L 0,8 L 10,8 Z" />

                                                <Border Background="#2D2F31" 
                                                        BorderBrush="#555759" 
                                                        BorderThickness="1" 
                                                        CornerRadius="5"
                                                        Padding="10"
                                                        Margin="0,8,0,0">

                                                    <ItemsControl ItemsSource="{Binding Tags}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding TagName}" 
                                                                            Foreground="White"
                                                                            FontSize="14" 
                                                                            Margin="0,2"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToolTip.Template>
                                </ToolTip>
                            </Border.ToolTip>

                            <Control Template="{StaticResource ScrollText}"
                                     Width="24" 
                                     Height="24"
                                     IsHitTestVisible="False"/>
                        </Border>

                        <Button Command="{Binding DataContext.SetFavoriteCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding }"
                                Margin="2,0,0,0">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="Click">
                                    <b:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                        PropertyName="IsSelected"
                                        Value="True" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource Button.App}">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <Viewbox>
                                                <Control Template="{StaticResource AddFavorite}" Width="20" Foreground="#35A500"/>
                                            </Viewbox>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Viewbox>
                                                        <Control Template="{StaticResource RemoveFavorite}" Width="20" Foreground="Yellow"/>
                                                    </Viewbox>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="PopupButton"
                                Command="{Binding DataContext.PasswordMenuPopup.ShowCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding ElementName=PopupButton}"
                                Style="{StaticResource Button.App}"
                                Margin="2,0,0,0">
                            <Button.Content>
                                <Viewbox>
                                    <Control Template="{StaticResource DotsMenu}" Width="25" Foreground="White"/>
                                </Viewbox>
                            </Button.Content>
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="Click">
                                    <b:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                        PropertyName="IsSelected"
                                        Value="True" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Button>
                    </WrapPanel>
                </DockPanel>

                <!--#endregion-->

            </Grid>
        </DataTemplate>

        <!--#endregion-->

        <!--#region Очень краткое описание элемента -->

        <DataTemplate x:Key="VeryBrieflySecret">
            <Image Source="{Binding Icon}"
                   Width="80" Height="80"
                   Stretch="Uniform"
                   DockPanel.Dock="Left"
                   ToolTip="{Binding ServiceName}"/>
        </DataTemplate>

        <!--#endregion-->

        <!--Разметка паролей-->

        <!--#region Password -->

        <DataTemplate DataType="{x:Type pvm:StandardPasswordViewModel}">
            <DockPanel>
                <DockPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </DockPanel.Resources>

                <Border Background="#3B3F42" Margin="0,5,0,5" CornerRadius="6" DockPanel.Dock="Top">
                    <TextBlock Text="Основная информация" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                </Border>

                <Image Source="{Binding Icon}"
                       Visibility="{Binding DataContext.CurrentActionRightSideMenu, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource ActionOnDataToPreviewIconVisibilityConverter}}"
                       Height="100"
                       DockPanel.Dock="Top"/>

                <DockPanel DockPanel.Dock="Top">

                    <Button Style="{StaticResource Button.App}"
                            Visibility="{Binding DataContext.CurrentActionRightSideMenu, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource ActionOnDataToCopyVisibilityConverter}}"
                            DockPanel.Dock="Right">
                        <Button.ToolTip>
                            <ToolTip Content="Копировать" 
                                     Placement="Custom"
                                     CustomPopupPlacementCallback="{Binding DataContext.TopToolTipController.CustomPlacementCallback, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                                     Style="{StaticResource ToolTip.App.Placement.Top}"/>
                        </Button.ToolTip>
                        <Button.Content>
                            <Control Template="{StaticResource Copy}" Width="15"/>
                        </Button.Content>
                    </Button>

                    <cc:PlaceHolderTextBox PlaceHolder="Название" 
                                           Text="{Binding ServiceName}"
                                           IsReadOnly="{Binding IsReadOnly}" 
                                           HorizontalAlignment="Stretch"/>

                </DockPanel>


                <cc:PlaceHolderTextBox PlaceHolder="Url" 
                                       Text="{Binding Url}" 
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <Border Background="#3B3F42" Margin="0,5,0,5" CornerRadius="6" DockPanel.Dock="Top">
                    <TextBlock Text="Инф. для шифрования" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                </Border>

                <cc:PlaceHolderTextBox PlaceHolder="Логин" 
                                       Text="{Binding Login}" 
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Пароль"
                                       Text="{Binding Password}" 
                                       IsReadOnly="{Binding IsReadOnly}"
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Почта"
                                       Text="{Binding Email}" 
                                       IsReadOnly="{Binding IsReadOnly}"
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Телефон" 
                                       Text="{Binding Phone}"
                                       IsReadOnly="{Binding IsReadOnly}"
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Секретная фраза" 
                                       Text="{Binding SecretWord}" 
                                       IsReadOnly="{Binding IsReadOnly}"
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Ключи востановления"
                                       Text="{Binding RecoveryKey}" 
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <Border Background="#3B3F42" Margin="0,5,0,5" CornerRadius="6" DockPanel.Dock="Top">
                    <TextBlock Text="Заметки (Щифруються)" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                </Border>

                <Grid DockPanel.Dock="Bottom">
                    <Button Content="Сохранить"
                            Command="{Binding DataContext.CreateVaultCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Visibility="{Binding DataContext.CurrentActionRightSideMenu, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource ActionOnDataToVisibilityConverter}, ConverterParameter={x:Static enum:ActionOnData.Create}}"
                            Style="{StaticResource Button.Save}" 
                            VerticalAlignment="Bottom"/>

                    <Button Content="Обновить"
                            Command="{Binding DataContext.UpdateVaultCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Visibility="{Binding DataContext.CurrentActionRightSideMenu, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource ActionOnDataToVisibilityConverter}, ConverterParameter={x:Static enum:ActionOnData.Update}}"
                            Style="{StaticResource Button.Update}" 
                            VerticalAlignment="Bottom"/>
                </Grid>

                <TextBox Text="{Binding Note}" 
                         IsReadOnly="{Binding IsReadOnly}"
                         VerticalAlignment="Stretch"
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>

            </DockPanel>
        </DataTemplate>

        <!--#endregion-->

        <!--#region Server -->

        <DataTemplate DataType="{x:Type pvm:ServerPasswordViewModel}">
            <DockPanel>
                <DockPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </DockPanel.Resources>

                <Border Background="#3B3F42" Margin="0,5,0,5" CornerRadius="6" DockPanel.Dock="Top">
                    <TextBlock Text="Основная информация" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                </Border>

                <Image Source="{Binding Icon}"
                       Visibility="{Binding DataContext.CurrentActionRightSideMenu, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource ActionOnDataToPreviewIconVisibilityConverter}}"
                       Height="100"
                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Название" 
                                       Text="{Binding ServiceName}"
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="Url" 
                                       Text="{Binding Url}"
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>


                <Border Background="#3B3F42" Margin="0,5,0,5" CornerRadius="6" DockPanel.Dock="Top">
                    <TextBlock Text="Инф. для шифрования" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                </Border>

                <cc:PlaceHolderTextBox PlaceHolder="IP Адрес" 
                                       Text="{Binding IpAddress}"
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="SH Порт" 
                                       Text="{Binding Port}"
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

                <cc:PlaceHolderTextBox PlaceHolder="SSH Ключ" 
                                       Text="{Binding SshKey}"
                                       IsReadOnly="{Binding IsReadOnly}" 
                                       DockPanel.Dock="Top"/>

