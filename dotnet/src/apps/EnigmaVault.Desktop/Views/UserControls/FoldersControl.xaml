<UserControl x:Class="EnigmaVault.Desktop.Views.UserControls.FoldersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EnigmaVault.Desktop.Views.UserControls"
             xmlns:converters="clr-namespace:EnigmaVault.Desktop.Resources.ValueConverters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:EnigmaVault.Desktop.Resources.Behaviors"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        
        <!--#region Контекстное меню у списка с паролям -->

        <!-- Модальный оверлей для PasswordMenuPopup -->
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="3" Panel.ZIndex="2"
                Background="Transparent"
                Visibility="{Binding ContextMenuPopupController.IsOpen, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding ContextMenuPopupController.HideCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Border>

        <Popup IsOpen="{Binding ContextMenuPopupController.IsOpen, RelativeSource={RelativeSource AncestorType=UserControl}}"
               StaysOpen="{Binding ContextMenuPopupController.StaysOpen, RelativeSource={RelativeSource AncestorType=UserControl}}"
               PlacementTarget="{Binding ContextMenuPopupController.PlacementTarget, RelativeSource={RelativeSource AncestorType=UserControl}}"
               Placement="{Binding ContextMenuPopupController.CurrentPlacement, RelativeSource={RelativeSource AncestorType=UserControl}}"
               AllowsTransparency="True"
               PopupAnimation="Slide">

            <Border Background="{StaticResource App.SurfaceBrush}"
                    BorderBrush="White"
                    BorderThickness="0.5"
                    Padding="10" 
                    CornerRadius="5">

                <DockPanel>
                    <UniformGrid DockPanel.Dock="Top" Columns="3" Rows="0">

                        <Button Grid.Column="0" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Center">
                            <Button.Content>
                                <Control Template="{StaticResource Trash}" Width="20" Foreground="White"/>
                            </Button.Content>
                        </Button>

                        <Button Grid.Column="1" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Center">
                            <Button.Content>
                                <Control Template="{StaticResource Clipboard}" Width="20" Foreground="White"/>
                            </Button.Content>
                        </Button>

                        <Button Grid.Column="2" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Center">
                            <Button.Content>
                                <Control Template="{StaticResource ArchiveRestore}" Width="20" Foreground="White"/>
                            </Button.Content>
                        </Button>

                    </UniformGrid>

                    <Button Content="Скопировать" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Left"
                            DockPanel.Dock="Top"/>
                    <Button Content="Переместить" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Left"
                            DockPanel.Dock="Top"/>
                    <Button Content="Избранное" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Left"
                            DockPanel.Dock="Top"/>
                    <Button Content="Добавить Тэг" Style="{StaticResource Button.ListView.Menu}" HorizontalContentAlignment="Left"
                            DockPanel.Dock="Top"/>
                    
                </DockPanel>
            </Border>
        </Popup>

        <!--#endregion-->

        <TreeView ItemsSource="{Binding Folders, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  Background="#F8F9FA"
                  BorderBrush="#E0E0E0"
                  BorderThickness="0"
                  Padding="8"
                  HorizontalContentAlignment="Stretch">

            <TreeView.Resources>
                <!-- Стиль для TreeViewItem -->
                <Style TargetType="TreeViewItem">
                    <Setter Property="Padding" Value="4"/>
                    <Setter Property="Margin" Value="0,2"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TreeViewItem">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <!-- Заголовок элемента -->
                                    <Border x:Name="ItemBorder" 
                                            Grid.Row="0"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="8,6"
                                            Margin="2,0">
                                        <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                                                <i:ChangePropertyAction PropertyName="IsSelected"
                                                                        Value="True"
                                                                        TargetObject="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseRightButtonUp">
                                                <i:InvokeCommandAction Command="{Binding SelectAndShowContextMenuPopupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <ToggleButton x:Name="Expander" 
                                                          Grid.Column="0"
                                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                          ClickMode="Press"
                                                          Width="20"
                                                          Height="20"
                                                          Margin="0,0,6,0"
                                                          Background="Transparent"
                                                          BorderThickness="0">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="Transparent" Width="20" Height="20">
                                                                        <Path x:Name="Arrow"
                                                                              Data="M 0 0 L 4 4 L 0 8 Z"
                                                                              Fill="#606060"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              RenderTransformOrigin="0.5,0.5">
                                                                            <Path.RenderTransform>
                                                                                <RotateTransform Angle="0"/>
                                                                            </Path.RenderTransform>
                                                                        </Path>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsChecked" Value="True">
                                                                            <Trigger.EnterActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="90"
                                                                                                         Duration="0:0:0.2">
                                                                                            <DoubleAnimation.EasingFunction>
                                                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                                                            </DoubleAnimation.EasingFunction>
                                                                                        </DoubleAnimation>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.EnterActions>
                                                                            <Trigger.ExitActions>
                                                                                <BeginStoryboard>
                                                                                    <Storyboard>
                                                                                        <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                                         Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                                         To="0"
                                                                                                         Duration="0:0:0.2">
                                                                                            <DoubleAnimation.EasingFunction>
                                                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                                                            </DoubleAnimation.EasingFunction>
                                                                                        </DoubleAnimation>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </Trigger.ExitActions>
                                                                        </Trigger>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Arrow" Property="Fill" Value="#2C5AA0"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>

                                            <!--<Control Grid.Column="1" 
                                                     Template="{StaticResource Folder}"
                                                     Foreground="#FDB44B"
                                                     Width="18" Height="18" Margin="0,0,8,0"/>-->

                                            <Path Grid.Column="1" 
                                                  Data="M10 4H4c-1.11 0-2 .89-2 2v12c0 1.097.903 2 2 2h16c1.097 0 2-.903 2-2V8c0-1.11-.9-2-2-2h-8l-2-2z"
                                                  Fill="#FDB44B"
                                                  Stretch="Uniform"
                                                  Width="18"
                                                  Height="18"
                                                  Margin="0,0,8,0"/>

                                            <ContentPresenter Grid.Column="2" 
                                                              x:Name="PART_Header" 
                                                              ContentSource="Header"
                                                              VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>

                                    <ItemsPresenter x:Name="ItemsHost" 
                                                    Grid.Row="1" 
                                                    Margin="20,2,0,0"
                                                    Visibility="Collapsed"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <!-- Показать дочерние элементы при раскрытии -->
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="ItemsHost" Property="Visibility" Value="Visible"/>
                                    </Trigger>

                                    <!-- Скрыть кнопку раскрытия, если нет дочерних элементов -->
                                    <Trigger Property="HasItems" Value="False">
                                        <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                                    </Trigger>

                                    <!-- Эффект при наведении ТОЛЬКО на шапку элемента -->
                                    <Trigger SourceName="ItemBorder" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#1E2F3A"/>
                                    </Trigger>

                                    <!-- Эффект при выборе -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="Transparent"/>
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#4A90E2"/>
                                    </Trigger>

                                    <!-- Комбинированный эффект: выбран И курсор наведен на шапку -->
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition SourceName="ItemBorder" Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="ItemBorder" Property="Background" Value="Transparent"/>
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#1455A2"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- Стиль для TextBlock внутри элементов -->
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=TreeViewItem}}" Value="True">
                            <Setter Property="Foreground" Value="#1A5490"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubFolders}">
                    <TextBlock Text="{Binding FolderName}" Foreground="White"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

        </TreeView>
    </Grid>
</UserControl>