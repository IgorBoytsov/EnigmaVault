<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ╔═════════════════════════════════════════════════════════════════════════════╗ -->
    <!-- ║                                  Базовый                                    ║ -->
    <!-- ╚═════════════════════════════════════════════════════════════════════════════╝ -->

    <Style x:Key="Border.Base.Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.SurfaceBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>

    <Style x:Key="Border.Popup" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource App.Background}"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>