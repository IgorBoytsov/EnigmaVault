<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EnigmaVault.Desktop.Resources.Attachable">

    <Style x:Key="ToggleButton.Page.SideMenu.Management" TargetType="ToggleButton">
        <Setter Property="Margin" Value="5,2,0,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#F0F1F3"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <DockPanel>
                            <Viewbox Width="17"
                                    VerticalAlignment="Center"
                                    Margin="5,0,5,0">
                                <Control Template="{Binding Path=(local:ButtonHelper.IconTemplate), RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Viewbox>
                            <ContentControl x:Name="contenButton" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"
                                            FontSize="{TemplateBinding FontSize}"
                                            FontWeight="{TemplateBinding FontWeight}"
                                            Foreground="{TemplateBinding Foreground}"
                                            Content="{TemplateBinding Content}"
                                            Margin="3"
                                            DockPanel.Dock="Left"/>
                            <Viewbox Width="6"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,5,0">
                                <Control Template="{StaticResource ArrowRight}"/>
                            </Viewbox>
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="#424242"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="#424242"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="#2A2A2A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>