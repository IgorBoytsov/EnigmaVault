<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:attach="clr-namespace:EnigmaVault.Desktop.Resources.Attachable">
    
    <!--#region SideMenu на страницах-->

    <Style x:Key="Button.Page.SideMenu.Management" TargetType="Button">
        <Setter Property="Margin" Value="5,2,0,0"/>
        <Setter Property="BorderThickness" Value="0,0,0,4"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#F0F1F3"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <DockPanel>
                            <Viewbox Width="17"
                                     VerticalAlignment="Center"
                                     Margin="0,0,5,0">
                                <Control Template="{Binding Path=(attach:ButtonHelper.IconTemplate), RelativeSource={RelativeSource TemplatedParent}}"/>
                            </Viewbox>
                            <ContentControl x:Name="contenButton" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"
                                            FontSize="{TemplateBinding FontSize}"
                                            FontWeight="{TemplateBinding FontWeight}"
                                            Foreground="{TemplateBinding Foreground}"
                                            Content="{TemplateBinding Content}"
                                            Margin="5,0,0,0"
                                            DockPanel.Dock="Left"/>
                            <Viewbox Width="6"
                                     HorizontalAlignment="Right"
                                     Margin="0,0,5,0">
                                <Control Template="{StaticResource ArrowRight}"/>
                            </Viewbox>
                        </DockPanel>

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Transparent"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="{StaticResource Button.SideMenu.BorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Transparent"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="{StaticResource Button.SideMenu.BorderBrush}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region SideMenu в MainWindow -->

    <Style x:Key="Button.MainWindow.SideMenu" TargetType="Button">
        <Setter Property="BorderThickness" Value="4,0,0,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#F0F1F3"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="300"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">

                        <ContentControl x:Name="contenButton" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Content="{TemplateBinding Content}" 
                                        Margin="2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.SideMenu.Background}"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="{StaticResource Button.SideMenu.BorderBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.SideMenu.Background}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.SideMenu.Disable.Background}"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="{StaticResource Button.SideMenu.BorderBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region Управление окном -->

    <Style x:Key="Button.Management.Window" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">

                        <ContentControl x:Name="contenButton" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}"
                                        Content="{TemplateBinding Content}" 
                                        Margin="0"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.MouseOver.Bacground}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.Pressed.Bacground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
    
    <!--#endregion-->

    <!--#region Базовая кнопка -->

    <Style x:Key="Button.App" TargetType="Button">
        <Setter Property="Background" Value="#3062D4"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">

                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Margin="7,1,7,1"/>

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="#1E50C0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="buttonBorder" Property="Background" Value="{StaticResource Button.SideMenu.Background}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="buttonBorder" Property="Background" Value="#3F3F4E"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Button.App.Animation" TargetType="Button" BasedOn="{StaticResource Button.App}">
        <Style.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                        To="#464B69"
                                        Duration="0:0:0.4"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                        To="Transparent"
                                        Duration="0:0:0.5"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Button.App.VisibleWhenDisabled.WithOutAnimation" TargetType="Button" BasedOn="{StaticResource Button.App}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Visibility" Value="Visible"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Button.App.VisibleWhenDisabled.WithAnimation" TargetType="Button" BasedOn="{StaticResource Button.App.Animation}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Visibility" Value="Visible"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--#endregion-->

    <!--#region [UserSecretsPage] Кнопки фильтрации на боковой понели -->

    <Style x:Key="Button.UseCeretPage.ShoAllSecret" TargetType="Button">
        <!--<Setter Property="Background" Value="#2980B5"/>-->
        <Setter Property="Background" Value="#7A7A7A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="buttonBorder"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">

                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Margin="3" />

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <!--<Setter TargetName="buttonBorder" Property="Background" Value="#0E659A"/>-->
                            <Setter TargetName="buttonBorder" Property="Background" Value="#565656"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <!--<Setter TargetName="buttonBorder" Property="Background" Value="#0E659A"/>-->
                            <Setter TargetName="buttonBorder" Property="Background" Value="#565656"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <!--<Setter TargetName="buttonBorder" Property="Background" Value="#005085"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="#003E73"/>-->
                            <Setter TargetName="buttonBorder" Property="Background" Value="#565656"/>
                            <Setter TargetName="buttonBorder" Property="BorderBrush" Value="#2F2F2F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Visibility" Value="Visible"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--#endregion-->

</ResourceDictionary>